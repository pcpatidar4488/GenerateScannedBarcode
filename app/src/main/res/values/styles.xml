<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:background">@color/button_green</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ExtraDialog3Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/extraDialog3grayBg</item>
        <item name="android:textCursorDrawable">@drawable/loginsignup_color_cursor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Gotham_Light">
        <item name="fontType">Gotham_Light</item>
    </style>

    <style name="Gotham_Book">
        <item name="fontType">Gotham_Book</item>
    </style>

    <style name="Gotham_Medium">
        <item name="fontType">Gotham_Medium</item>
    </style>

    <style name="Gotham_Bold">
        <item name="fontType">Gotham_Bold</item>
    </style>

    <style name="Gothan_BookItalic">
        <item name="fontType">Gotham_BookItalic</item>
    </style>

    <style name="Gotham_Black">
        <item name="fontType">Gotham_Black</item>
    </style>

</resources>
